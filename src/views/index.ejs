<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NekoNode Anime Player</title>
    <link href="https://vjs.zencdn.net/7.15.4/video-js.css" rel="stylesheet" />
    <script src="https://vjs.zencdn.net/7.15.4/video.min.js"></script>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background-color: #1a1a1a; /* Match the player background color */
        }
        .video-container {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            background-color: black;
        }
        #video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .vjs-big-play-button {
            top: 50% !important;
            left: 50% !important;
            transform: translate(-50%, -50%) !important;
            font-size: 4em !important;
        }
        .skip-message {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 10px 20px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            font-size: 1.5em;
            border-radius: 5px;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            z-index: 9999;
        }
    </style>
</head>
<body>
    <div class="video-container">
        <video id="video" class="video-js vjs-default-skin" controls preload="auto" data-setup='{}'>
            <source src="<%= videoUrl %>" type="application/x-mpegURL">
        </video>
        <div id="skip-message" class="skip-message"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var player = videojs('video');
            var skipMessage = document.getElementById('skip-message');

            player.ready(function() {
                console.log('Player is ready');
            });

            // Autoplay logic
            player.one('click', function() {
                player.play();
            });

            // Function to show skip message
            function showSkipMessage(direction) {
                skipMessage.textContent = direction === 'forward' ? '+5 seconds' : '-5 seconds';
                skipMessage.style.opacity = 1;
                setTimeout(function() {
                    skipMessage.style.opacity = 0;
                }, 500);
            }

            // Space bar play/pause and arrow keys seek logic
            document.addEventListener('keydown', function(event) {
                switch (event.code) {
                    case 'Space':
                        event.preventDefault();
                        if (player.paused()) {
                            player.play();
                        } else {
                            player.pause();
                        }
                        break;
                    case 'ArrowLeft':
                        event.preventDefault();
                        player.currentTime(player.currentTime() - 5);
                        showSkipMessage('backward');
                        break;
                    case 'ArrowRight':
                        event.preventDefault();
                        player.currentTime(player.currentTime() + 5);
                        showSkipMessage('forward');
                        break;
                }
            });
        });
    </script>
</body>
</html>
